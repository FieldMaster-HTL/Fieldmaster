{
  "name": "fieldmaster",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "docker compose up -d && node ./scripts/wait-for-db.js && npm run db:prepare && next dev",
    "stop": "docker compose down",
    "db:prepare": "npm run db:migrate && npm run db:types",
    "dev:ngrok": "next dev & ngrok http 3000",
    "db:migrate": "drizzle-kit migrate",
    "db:types": "drizzle-kit generate",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@clerk/nextjs": "^6.33.7",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.6",
    "next": "^15.2.3",
    "pg": "^8.16.3",
    "react": "19.2.0",
    "react-dom": "19.2.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@trivago/prettier-plugin-sort-imports": "^6.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/pg": "^8.15.5",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "drizzle-kit": "^0.31.5",
    "eslint": "^9",
    "eslint-config-next": "16.0.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "ngrok": "^5.0.0-beta.2",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "tailwindcss": "^4",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5"
  }
}
